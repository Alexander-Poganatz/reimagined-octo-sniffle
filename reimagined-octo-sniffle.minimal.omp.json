{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "cyan",
          "style": "plain",
          "properties": {
            "style": "full",
            "home_icon": "üè†"
          },
          "template": "üìÅ {{ .Path }} ",
          "type": "path"
        },
        {
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_worktree_count": false
          },
          "style": "plain",
          "template": "ü¶ë({{ if or (.Working.Changed) (.Staging.Changed) (gt .StashCount 0) }}<magenta>{{ .HEAD }}</>{{ else }}<green>{{ .HEAD }}</>{{ end }}{{ if (gt .Ahead 0)}}<cyan>{{ .BranchStatus }}</>{{ end }}{{ if (gt .Behind 0)}}<cyan>{{ .BranchStatus }}</>{{ end }}{{ if .Staging.Changed }} <green>{{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }} <red>{{ .Working.String }}</>{{ end }})",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "foreground",
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "{{ if ne .Code 0 }}<red>({{ .Code }}) </>{{ else }}<green>({{ .Code }}) </>{{ end }}> ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
